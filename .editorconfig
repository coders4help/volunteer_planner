# http://editorconfig.org
root = true

[**]
end_of_line = lf
charset = utf-8
insert_final_newline = true
indent_style = space

[**.py]
indent_size = 4
trim_trailing_whitespace = true

[Dockerfile]
indent_size = 4

[**.{yml,yaml}]
indent_size = 2

[**.sh]
indent_size = 4
trim_trailing_whitespace = true
